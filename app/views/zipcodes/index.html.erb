<div class="large-6 columns row collapse search_form">
  <h3 class="centered">Zip Code Index</h3>
  <%= search_form_for @search do |f| %>
    <div class="small-8 columns">
      <%= f.text_field :zip_cont, placeholder: "Zip Code..." %>
    </div>
    <div class="small-4 columns">
      <%= f.submit 'Search Zip Codes', :class => "button postfix" %>
    </div>
  <% end %>
</div>