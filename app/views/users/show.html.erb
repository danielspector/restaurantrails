<div class="medium-12 columns">
  <%= render 'errors' %>

  <h2><%= @user.name %></h2>
  <%= @user.email %>

  <h2>Favorite Zipcodes</h2>
  <ul>
  <% @user.zipcodes.each do |zip| %>
    <li><%= link_to zip.zip, zip_path(zip), 'data-no-turbolink' => true %></li>
  <% end %>
  </ul>

  <h2>Restaurant Watchlist</h2>
  <% if @user.restaurants.length == 0 %>
   <p>You have no restaurants on your watchlist.</p>
  <% else %>
  <ul>
  <% @user.restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant_path(restaurant), 'data-no-turbolink' => true %>
      </li>
  <% end %>
  </ul>
  <% end %>

  <p><%= link_to "Edit Your Profile", edit_user_path(@user), :class => "button" %>  <%= link_to "Go to Homepage", root_path, :class => "button" %></p>
</div>