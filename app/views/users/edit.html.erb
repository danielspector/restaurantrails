<div class="medium-7 columns">
  <% if flash[:notice] %>
    <div data-alert class="alert-box warning round">
      <%= flash[:notice] %>
    </div>
    <% flash.delete(:notice) %>
  <% end %>
  <h1>Hey, <%= @user.name %>.  Edit your profile here.</h1>
  <%= render 'form' %>
  <%= link_to "Back to my profile", @user, :class => "button" %>
</div>