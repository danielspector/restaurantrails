<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @user.name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email, value: @user.email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <label for="zipcode_list">Add your favorite zipcode(s), separated by commas.</label>
  <%= f.text_field :zipcode_list, value: @user.zipcodes_as_a_string %>
  <br>
  <button class="button">Submit</button>
<% end %>