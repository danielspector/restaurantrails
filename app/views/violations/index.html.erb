<div class="large-6 columns row collapse">
  <%= search_form_for @search do |f| %>
    <%#= f.label :description_cont, "Description Contains:" %>
    <div class="small-8 columns">
      <%= f.text_field :description_cont, placeholder: "Keyword in description..." %>
    </div>
    <div class="small-4 columns">
      <%= f.submit 'Search Violations', :class => "button postfix" %>
    </div>
    <!-- <button class="button small-2 columns">Search Violations</button> -->
  <% end %>
</div>
<div class="row">
</div>

<div class="medium-12 columns">
  <div class="medium-12 columns">
    <% if params[:q] %>
    <div class="search">
      <% if @found_violations == [] %>
        <%= "Search returned 0 results" %>
      <% else %>
      <h2>Search Results</h2>
        <ol>
        <% @found_violations.each do |v| %>
          <li><%= link_to "#{v.vio_code}. #{v.description}", violation_path(v) %></li>
        <% end %>
        </ol>
      <% end %>

    <% end %>
    </div>

    <p>Most Common Violations</p>
    <ol>
    <% @most_common.each do |v| %>
      <li><%= link_to "#{v.vio_code}. #{v.description}", violation_path(v) %></li>
    <% end %>
    </ol>

    <table>
      <tr>
        <th>Code</th>
        <th>Description</th>
      </tr>
    <% @violations.each do |v| %>
      <tr>
        <td><%= link_to v.vio_code, violation_path(v) %></td>
        <td><%= v.description %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>