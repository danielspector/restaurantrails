
<h2>Violation <%= @violation.vio_code %></h2>
<h3><%= @violation.description %></h3>
<% if @violation.critical_vio == true %>
<h1 class="red">This violation is critical</h1>
<% end %>

<% if @violation.restaurants.length == 0 %>
  <h2>There are no restaurants with this violation.</h2>
<% else %>
  <h2>Restaurants with this violation</h2>
  <% hash = @violation.restaurants.group_by {|r| r.zip} %>
  <% hash.sort.each do |k, v|%>
    <br/>
    <%= link_to k, zip_path(k) %>
    <br>
    <%v.each do |r|%>
      <a href="/restaurant/<%=r.id%>" data-no-turbolink="true" ><%=r.name%></a><br/>
    <%end%>
  <%end%>
<% end %>

<%= link_to "Violation Index", violations_path %>
