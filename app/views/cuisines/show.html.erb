<head>
   <link href='/profiles.css' rel='stylesheet' type='text/css'>
</head>
  <title>
    <%=@cuisine.description%>
  </title>
</head>

  <body>
  <div id="form">
    <%= render "pages/form" %>
  </div>
  <div class="_page">
    <h2>Cuisine: <%= @cuisine.description %></h2>

    <h2>Restaurants</h2>
    <% hash = @cuisine.restaurants.group_by {|r| r.zip} %>
    <% hash.sort.each do |k, v|%>
    <br/>
    <%= link_to k, zip_path(k) %>
    <br>
      <%v.each do |r|%>
        <%= link_to r.name, restaurant_path(r) %><br/>
      <%end%>
    <%end%>
    </ul>
  </div>
  <%= link_to "Cuisine Index", cuisines_path %>
  
</body>
